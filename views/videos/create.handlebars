<div class="contents-container">
  <h1>Save a video<h1>
  <form method="post" action="/videos" id="addVideo">

    <label for="url">Url</label>
    <input name="url" id="url-input" value="{{newVideo.url}}"/>
    {{#with newVideo.errors.url as |error|}}
    <div class="error">{{error.message}}</div>
    {{/with}}

    <label for="title">Title</label>
    <input name="title" id="title-input" value="{{newVideo.title}}" />
    {{#with newVideo.errors.title as |error|}}
    <div class="error">{{error.message}}</div>
    {{/with}}

    <label for="description">Description</label>
    <textarea name="description" id="description-input" class="video-description">{{newVideo.description}}</textarea>
    {{#with newVideo.errors.description as |error|}}
    <div class="error">{{error.message}}</div>
    {{/with}}

    <input type="submit" id="submit-button" class="input-button" value="Save">
  </form>
</div>
